<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="categoryTitle"
            type="String" />

        <variable
            name="categoryDescription"
            type="String" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:inputType="textCapWords"
                android:text="@{categoryTitle}"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/category_action_show_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_chip"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="See all"
                android:textAllCaps="false"
                android:textColor="@color/pink"
                android:textSize="12sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{categoryDescription}"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone" />

        <include
            android:id="@+id/category_list_item"
            layout="@layout/item_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>