<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splash_screen">

    <fragment
        android:id="@+id/splash_screen"
        android:name="com.goplay.splash.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_splashScreen_to_homeScreen"
            app:destination="@id/home_screen"
            app:enterAnim="@android:animator/fade_in"
            app:exitAnim="@android:animator/fade_out"
            app:popUpToInclusive="true"
            app:popUpTo="@id/splash_screen"/>
    </fragment>
    <fragment
        android:id="@+id/home_screen"
        android:name="com.goplay.home.ui.HomeFragment"
        android:label="HomeFragment"/>
</navigation>